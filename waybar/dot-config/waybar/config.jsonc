{
	"layer": "top",
	"position": "top",
	"margin-top": 6,
	"margin-left": 8,
	"margin-right": 8,
	"reload_style_on_change": true,
	"modules-left": ["hyprland/workspaces"],
	"modules-center": ["hyprland/window", "custom/music"],
	"modules-right": [
		// "custom/colorpicker",
		// "cpu",
		// "memory",
		// "temperature",
		// "custom/endpoint",

		"group/expand",
		"hyprland/language",
		"battery",
		"bluetooth",
		"network",
		"custom/notification",
		"clock",
	],
	"hyprland/workspaces": {
		"format": "{icon}",
		"format-icons": {
			"1": "ÔÑ†",
			"2": "Ôâ®",
			"default": "ÔÑë",
		},
		"persistent-workspaces": {
			"*": [1, 2, 3],
		},
		"on-scroll-up": "hyprctl dispatch workspace e-1 -q",
		"on-scroll-down": "hyprctl dispatch workspace e+1 -q",
	},
	"hyprland/window": {
		"format": "{title}",
		"icon": true,
		"icon-size": 22,
		"max-length": 25,
	},
	"hyprland/language": {
		"format-en": "en",
		"format-gr": "gr",
		"on-click": "hyprctl switchxkblayout all next --quiet",
	},
	"custom/notification": {
		"tooltip": false,
		"format": "Óöê",
		"on-click": "swaync-client -t -sw",
	},
	"clock": {
		"format": "{:%a %d %b %I:%M %p} ",
		"interval": 60,
		"tooltip-format": "<tt>{calendar}</tt>",
		"calendar": {
			"mode": "year",
			"mode-mon-col": 3,
			"on-scroll": 1,
			"format": {
				"months": "<span color='#ffead3'><b>{}</b></span>",
				"days": "<span color='#ecc6d9'><b>{}</b></span>",
				"weekdays": "<span color='#ffcc66'><b>{}</b></span>",
				"today": "<span color='#ff6699'><b><u>{}</u></b></span>",
			},
		},
		"escape": true,
		"on-click": "swaync-client -t -sw",
	},
	"network": {
		"format-wifi": "Ôá´ ",
		"format-ethernet": "Óºâ ",
		"format-disconnected": "Ó¨Å ",
		"tooltip-format-disconnected": "Disconnected",
