	},
	"battery": {
		"interval": 30,
		"states": {
			"good": 95,
			"warning": 30,
			"critical": 20,
		},
		"format": "{icon}  {capacity}%",
		"format-charging": "Û∞ÇÑ  {capacity}%",
		"format-plugged": "Û∞ÇÑ Ó¨≠  {capacity}%",
		"format-alt": "{icon}  {time}",
		"format-icons": ["Û∞Åª", "Û∞Åº", "Û∞Åæ", "Û∞ÇÄ", "Û∞ÇÇ", "Û∞Åπ"],
